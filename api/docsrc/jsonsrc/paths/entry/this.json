{
  "post": {
    "tags": [
      "content"
    ],
    "summary": "Add a new entry",
    "description": "Post a new entry. The entry will be used as a source of a webpage",
    "operationId": "addContent",
    "consumes": [
      "application/json",
      "application/xml"
    ],
    "produces": [
      "application/xml",
      "application/json"
    ],
    "parameters": [
      {
        "in": "body",
        "name": "body",
        "description": "Add new content",
        "required": true,
        "schema": {
          "$ref": "#/definitions/entry"
        }
      }
    ],
    "responses": {
      "405": {
        "description": "Invalid input"
      }
    }
  },
  "get": {
    "description": "Fetch array of entries from the server",
    "produces": [
      "application/xml",
      "application/json"
    ],
    "parameters": [
      {
        "in": "query",
        "name": "file",
        "type": "string",
        "description": "Fetch the given entry (File)",
        "required": false
      },
      {
        "in": "query",
        "name": "folder",
        "type": "string",
        "description": "Fetch the entries (files) from a certain folder",
        "required": false
      },
      {
        "in": "query",
        "name": "depth",
        "type": "integer",
        "format": "int32",
        "description": "Maximum path depth to fetch unto which we fetch entries (files)",
        "required": false
      },
      {
        "in": "query",
        "name": "branch",
        "type": "string",
        "description": "Select the branch to fetch resources from, default: main",
        "required": false
      }
    ],
    "responses": {
      "200": {
        "description": "OK",
        "schema": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FilePath"
          }
        }
      }
    }
  }
}
